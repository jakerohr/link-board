<h1>Tags</h1>
<%= bootstrap_form_for @tag do |f| %>
  <%= f.text_field :name, :placeholder => "Enter a new tag" %>
  <%= f.submit %>
<% end %>
<%= render "layouts/flash" %>
<hr>
<div class="table-responsive">
  <table class="table table-striped table-condensed">
    <% @tags.each do |t| %>
      <tr>
        <td><%= link_to t.name, t %></td>
        <td> <%= link_to raw("<i class=\"glyphicon glyphicon-trash\"></i>"), tag_path(t), :method => :delete, :class=>"btn btn-danger" %>
</td>
      </tr>
    <% end %>
  </table>
</div>
  <%= link_to '< Back', root_path %>



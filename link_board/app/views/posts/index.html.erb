<h2>Posts Index</h2>

<div class="row">
    <% @posts.each do |p| %>
    <div class="col-md-7">

      <%= link_to p.title, p.link %>
    </div>
      <div class="col-md-2"><%= link_to "Edit this Post", edit_post_path(p), :class=>"btn btn-primary" %></div>
     <div class="col-md-2"><%= link_to "Delete this Post", post_path(p), :method => :delete, :class=>"btn btn-danger" %></div>

    <% end %>
</div>

